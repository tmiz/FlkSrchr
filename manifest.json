{
  "manifest_version": 2,
  "name": "FlkSrchr",
  "description": "Flickr Searcher",
  "version": "0.2.0",

  "background" : {
    "scripts": ["external_js/jquery.min.js", "background.js"]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "clipboardWrite"
  ],

  "content_security_policy": "script-src 'self' https://www.flickr.com; object-src 'self'",
  "options_page": "option_page.html",

  "browser_action": {
    "default_title": "FlkSrchr",
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "icons": { "48": "icon48.png",
          "128": "icon128.png" },
  "update_url" : "http://tg.tmiz.net/flckrSrchr/updates.xml"
}
